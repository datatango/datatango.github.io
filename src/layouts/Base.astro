---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Matthew Yang" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-950 text-zinc-100 min-h-screen">
    <nav class="max-w-2xl mx-auto px-4 py-8">
      <ul class="flex gap-6 text-sm">
        <li><a href={`${import.meta.env.BASE_URL}/`} class="hover:text-zinc-400 transition-colors">home</a></li>
        <li><a href={`${import.meta.env.BASE_URL}/work`} class="hover:text-zinc-400 transition-colors">work</a></li>
        <li><a href={`${import.meta.env.BASE_URL}/writing`} class="hover:text-zinc-400 transition-colors">writing</a></li>
      </ul>
    </nav>
    <main class="max-w-2xl mx-auto px-4 pb-16">
      <slot />
    </main>
  </body>
</html>